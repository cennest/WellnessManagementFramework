<Window x:Class="PhysioApplication.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:PhysioApplication.Properties"
        Title="Home Page" Height="Auto" Width="Auto">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Red"/>
                    </Trigger>
                </Style.Triggers>
                <Setter Property="Background" Value="#FF9A31" />
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="300" />
                <Setter Property="Margin" Value="70,0,20,0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF9A31" BorderBrush="#FFE776" BorderThickness="2,2,2,2" >
                                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="TextBlock" x:Key="TextBlockStyle">
                <Setter Property="Height" Value="50"/>
                <Setter Property="Width" Value="390"/>
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <StackPanel>
        <TextBlock 
            Height="20" 
            Width="Auto" 
            Margin="150,50,75,474" 
            FontSize="15">
            Welcome 
           <TextBlock Text="{Binding UserName}"/>
            , What would you like to do?
        </TextBlock>
        </StackPanel>
        <StackPanel Margin="0,80,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button>
                    <TextBlock Text="{x:Static resx:Resources.StringAccessAthletesInformation}"/>
                </Button>
                <TextBlock 
                    Style="{StaticResource TextBlockStyle}"
                    Text="{x:Static resx:Resources.StringAccessAthletesInformationDescription}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button>
                    <TextBlock Text="{x:Static resx:Resources.StringViewNotifications}"/>
                </Button>
                <TextBlock  
                    Style="{StaticResource TextBlockStyle}"
                    Text="{x:Static resx:Resources.StringViewNotificationsDescription}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button>
                    <TextBlock Text="{x:Static resx:Resources.StringChangeSettings}"/>
                </Button>
                <TextBlock 
                    Style="{StaticResource TextBlockStyle}"
                    Text="{x:Static resx:Resources.StringChangeSettingsDescription}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button>
                    <TextBlock Text="{x:Static resx:Resources.StringViewHistoricalTrends}"/>
                </Button>
                <TextBlock 
                    Style="{StaticResource TextBlockStyle}"
                    Text="{x:Static resx:Resources.StringViewHistoricalTrendsDescription}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
