<Window x:Class="PhysioApplication.AllClientNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:PhysioApplication.GridPaging"
        xmlns:l="clr-namespace:PhysioApplication" Title="AllClientNotification"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Width="Auto"
        Height="Auto">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Label Name="FilterLabel" Content="Filter by" Width="100" Height="30" Margin="100,-50,10,400" FontSize="14" FontWeight="Normal"/>
        <ComboBox Width="100" FontSize="10" ToolTip="Rows x Page" Name="cbPageFilter"
                          IsEditable="False" SelectionChanged="FilterComboBoxSelectionChanged"
                          VerticalAlignment="Center" Margin="220,-50,10,400" Height="23">
        </ComboBox>
        <DataGrid Name="ClientDataGrid" Grid.Row="1" Grid.RowSpan="1" 
		          Grid.Column="1"
		          Margin="10,100,10,10"
		          HorizontalAlignment="Left"
		          VerticalAlignment="Top"
		          AlternationCount="2"
		          AutoGenerateColumns="False"
		          MinRowHeight="26">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="ClientName" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Tag="{Binding ClientID}" Width="120" Text="{Binding ClientName}" MouseDown="TextBlock_MouseDown"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Width="120"
				                    Binding="{Binding ClientNotification}"
				                    Header="ClientNotification" />
                <DataGridTextColumn IsReadOnly="True" Width="120"
				                    Binding="{Binding ClientNotes}"
				                    Header="ClientLastNotes" />
            </DataGrid.Columns>
        </DataGrid>
        <my:GridPaging Grid.Row="2" HorizontalAlignment="Stretch" Margin="10,480,5,2" 
                       x:Name="gridPaging" VerticalAlignment="Top"/>
    </Grid>
</Window>

