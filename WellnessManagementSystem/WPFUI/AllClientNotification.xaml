<Window x:Class="PhysioApplication.AllClientNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:PhysioApplication.GridPaging"
        xmlns:l="clr-namespace:PhysioApplication" Title="AllClientNotification"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Width="Auto"
        Height="Auto"
          xmlns:userControl="clr-namespace:PhysioApplication.UserControls"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="406*"/>
        </Grid.RowDefinitions>
        
        <Label Name="FilterLabel" Content="Filter by" Width="100" Height="30" Margin="375,12,285,1" FontSize="14" FontWeight="Normal"/>
        <userControl:UCBreadCrumb x:Name="ucBreadCrumb"></userControl:UCBreadCrumb>
        <ComboBox Width="100" FontSize="10" ToolTip="Rows x Page" Name="cbPageFilter"
                          IsEditable="False" SelectionChanged="FilterComboBoxSelectionChanged"
                          VerticalAlignment="Center" Margin="435,16,225,5" Height="22">
        </ComboBox>
        <DataGrid Width="700" Name="ClientDataGrid" Grid.Row="2" Grid.RowSpan="1"
		          Margin="10,1.627,0,0"
		          HorizontalAlignment="Left"
		          VerticalAlignment="Top"
		          AlternationCount="2"
		          AutoGenerateColumns="False"
		          MinRowHeight="26">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="ClientName" Width="240">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Tag="{Binding ClientID}" Width="240" Text="{Binding ClientName}" MouseDown="TextBlock_MouseDown"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Width="240"
				                    Binding="{Binding ClientNotification}"
				                    Header="ClientNotification" />
                <DataGridTextColumn IsReadOnly="True" Width="240"
				                    Binding="{Binding ClientNotes}"
				                    Header="ClientLastNotes" />
            </DataGrid.Columns>
        </DataGrid>
        <my:GridPaging Grid.Row="2" HorizontalAlignment="Stretch" Margin="10,351.627,5,0" 
                       x:Name="gridPaging" VerticalAlignment="Top"/>
    </Grid>
</Window>

