<Window x:Class="PhysioApplication.AllClientNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:PhysioApplication.GridPaging"
        xmlns:l="clr-namespace:PhysioApplication" Title="AllClientNotification"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Width="768" Height="auto" MinWidth="768" MinHeight="540" MaxWidth="768" MaxHeight="540"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Name="FilterLabel" Content="Filter by" Width="70" Height="30" FontSize="14" FontWeight="Normal"
                   HorizontalAlignment="Center" />
            <ComboBox Width="100" FontSize="10" ToolTip="Rows x Page" Name="cbPageFilter"
                          IsEditable="False" SelectionChanged="FilterComboBoxSelectionChanged"
                          VerticalAlignment="Center" HorizontalAlignment="Center" Height="23">
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" >           
            <DataGrid Name="ClientDataGrid" 
		          HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0"
		          AlternationCount="2" AutoGenerateColumns="False" MinRowHeight="26">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="ClientName" Width="auto" MinWidth="240">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Tag="{Binding ClientID}" Text="{Binding ClientName}" MouseDown="TextBlock_MouseDown"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn IsReadOnly="True"
				                    Binding="{Binding ClientNotification}"
				                    Header="ClientNotification" Width="auto" MinWidth="240"/>
                    <DataGridTextColumn IsReadOnly="True" 
				                    Binding="{Binding ClientNotes}"
				                    Header="ClientLastNotes" Width="auto" MinWidth="240"/>
                </DataGrid.Columns>
            </DataGrid>
            <my:GridPaging Grid.Row="2" HorizontalAlignment="Center" x:Name="gridPaging" Margin="0,30"/>
        </StackPanel>
        
        
    </Grid>
</Window>

