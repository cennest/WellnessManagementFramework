<Window x:Class="PhysioApplication.AllClientNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:PhysioApplication" Title="AllClientNotification"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Width="600"
        Height="500">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <DataGrid Name="dataGrid1"
		          Grid.Row="3"
		          Grid.Column="1"
		          Margin="10"
		          HorizontalAlignment="Left"
		          VerticalAlignment="Top"
		          AlternationCount="2"
		          AutoGenerateColumns="False"
		          ItemsSource="{Binding ClientSummary}"
		          MinRowHeight="26">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Width="120"
				                    Binding="{Binding ClientName}"
				                    Header="ClientName">
                <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Blue"/>
                                <Setter Property="TextDecorations" Value="Underline" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn IsReadOnly="True" Width="120"
				                    Binding="{Binding ClientNotificationID}"
				                    Header="ClientNotification" />
                <DataGridTextColumn IsReadOnly="True" Width="120"
				                    Binding="{Binding ClientLastNotes}"
				                    Header="ClientLastNotes" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

