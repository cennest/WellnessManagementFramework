<Window x:Class="PhysioApplication.LabTestsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControl="clr-namespace:PhysioApplication.UserControls"
        Title="TestsSettingScreen" MinWidth="768" MinHeight="540">

    <Window.Resources>
        <DataTemplate x:Key="ListBoxItemTemplate" >
            <WrapPanel>
                <CheckBox Focusable="False"  Content="{Binding LabTest}" IsChecked="{Binding IsSelected}" VerticalAlignment="Center"  />
                <ContentPresenter Content="{Binding Element.Name, Mode=OneTime}"  Margin="2,0" />
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*" />
            <RowDefinition Height=".2*" />
            <RowDefinition Height=".2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height=".2*" />
            <RowDefinition Height=".08*" />
        </Grid.RowDefinitions>
        
        <userControl:ACESUC Grid.Row="0" />
            <userControl:UCBreadCrumb Margin="20,0,0,0" Grid.Row="1" x:Name="ucBreadCrumb"  />

        <Button Grid.Row="2" Width="100" Height="25" Click="AddNewTests_Click" >Add Test</Button>
        <Grid Grid.Row="3" Width="auto" Margin="0,20,0,0">
            <ListBox ItemsSource="{Binding}" ItemTemplate="{DynamicResource ListBoxItemTemplate}" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="300" HorizontalAlignment="Center" Name="listOfTests" VerticalAlignment="Top" Width="200" Background="Transparent">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"></WrapPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                
            </ListBox>
        </Grid>
        <Button Grid.Row="4" Width="100" Height="25" Click="Save_Click">Save Changes</Button>
        <userControl:Footer Grid.Row="5"/>
    </Grid>
</Window>
