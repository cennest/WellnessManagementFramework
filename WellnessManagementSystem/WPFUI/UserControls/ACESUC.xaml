<UserControl x:Class="PhysioApplication.UserControls.ACESUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            >
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}" >
                <Setter Property="FontFamily" Value="Calibri(Body)" />
                <Setter Property="FontSize" Value="40" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Padding" Value="5" />
            </Style>
        </Grid.Resources>
        
        <DockPanel HorizontalAlignment="Stretch">
            <TextBlock DockPanel.Dock="Left">ACES</TextBlock>
            <Image DockPanel.Dock="Right" Source="..\Images\OGQ.png" HorizontalAlignment="Right"></Image>
        </DockPanel>
    </Grid>
</UserControl>
